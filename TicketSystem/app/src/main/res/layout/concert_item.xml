<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_concert_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Metallica"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_concert_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warsaw-Bemowo"
        android:padding="5dp"
        android:layout_below="@+id/tv_concert_title"
        android:layout_alignLeft="@+id/tv_concert_title"
        android:layout_alignStart="@+id/tv_concert_title" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_concert_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12-07-2017"
        android:padding="5dp"
        android:layout_below="@+id/tv_concert_place"
        android:layout_alignLeft="@+id/tv_concert_title"
        android:layout_alignStart="@+id/tv_concert_title" />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_concert_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Buy Ticket!"
        android:layout_gravity="right"
        android:textSize="12dp"
        android:layout_alignBottom="@+id/tv_concert_date"
        android:layout_alignRight="@+id/tv_concert_title"
        android:layout_alignEnd="@+id/tv_concert_title" />
    </RelativeLayout>